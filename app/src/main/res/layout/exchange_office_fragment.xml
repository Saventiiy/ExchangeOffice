<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical" >
    <EditText
            android:id="@+id/parse"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:hint="@string/input_currency"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

        <EditText
                android:id="@+id/exchange_office_input_currency"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:hint="@string/input_currency"/>

        <Spinner
                android:id="@+id/exchange_office_input_currency_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

        <EditText
                android:id="@+id/exchange_office_output_currency"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:hint="@string/output_currency"/>

        <Spinner
                android:id="@+id/exchange_office_output_currency_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"/>

    </LinearLayout>
</LinearLayout>
